{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Scenario Result Schema",
    "description": "Schema for validating scenario results with nested attributes.",
    "type": "object",
    "required": ["scenario_result"],
    "properties": {
        "scenario_result": {
            "type": "object",
            "required": ["result", "features"],
            "properties": {
                "result": {
                },
                "features": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["feature_name", "status"],
                        "properties": {
                            "feature_name": {
                                "type": "string",
                                "description": "Name of the feature being tested"
                            },
                            "status": {
                                "type": "string",
                                "enum": ["pass", "fail", "error", "not_tested"],
                                "description": "Status of the feature (pass, fail, error, or not tested)"
                            },
                            "additionalProperties": False  # No additional properties allowed
                        }
                    },
                    "minItems": 1,  # Require at least one feature in the array
                    "description": "Array of feature results with name and status"
                }
            },
            "additionalProperties": False  # No additional properties allowed
        }
    }
}